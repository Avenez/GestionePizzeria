@{
    ViewBag.Title = "Home Page";
    var feedBack = Session["Messaggio"];
    bool inserimento = (bool)TempData["Inserimento"];
}

<main>
    <div class="container">
        <div id="alert" class="alert alert-success @((inserimento == true ? "d-block" : "d-none" )) " role="alert">
            @feedBack
        </div>

        <div class="row">
            <div class="col text-center flip-in-ver-right">
                <a href="/Prodotto/ListaProdotti"><img src="~/Images/Logo Home.png" alt="Alternate Text" class="imgHome" /></a>
                
            </div>
        </div>
        <div class="row">
            <div class="col text-center slide-in-bottom">
                <h1 class="titleHome">Welcome To The Real Italian Pizza</h1>
            </div>
        </div>

    </div>
</main>




<script>
    // Verifica se c'è un feedback da mostrare e mostra l'alert se presente
    var alertDiv = document.getElementById('alert');
    if (alertDiv.classList.contains('d-block')) {
        setTimeout(function () {
            alertDiv.classList.remove('d-none');
            alertDiv.classList.add('d-none'); // Rimuovi la classe per nascondere l'alert dopo 4 secondi
        }, 4000);
    }
</script>