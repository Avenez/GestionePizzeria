@model GestionePizzeria.Models.Prodotto

@{
    ViewBag.Title = "Edit";
}

<h2 class="display-4"> Modifica Prodotto</h2>


@using (Html.BeginForm("Edit", "Prodotto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal fw-bold row">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idProdotto)
<div class="col">

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2 w-100" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "control-label col-md-2 w-100" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Foto, new { htmlAttributes = new { @class = "form-control", type = "file" } })
            @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label col-md-2 w-100" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.TempoConsegna, htmlAttributes: new { @class = "control-label col-md-2 w-100" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TempoConsegna, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TempoConsegna, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Ingredienti, htmlAttributes: new { @class = "control-label col-md-2 w-100" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ingredienti, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ingredienti, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

<div class="col">
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Pranzo, htmlAttributes: new { @class = "control-label col-md-2 w-100" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Pranzo)
                    @Html.ValidationMessageFor(model => model.Pranzo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Cena, htmlAttributes: new { @class = "control-label col-md-2 w-100" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Cena)
                    @Html.ValidationMessageFor(model => model.Cena, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

<div class="form-group d-flex">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Salva" class="btn btn-warning" />
    </div>
    @Html.ActionLink("Indietro", "Index", "Prodotto", new { area = "" }, new { @class = "btn btn-dark" })
</div>
</div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
