@model GestionePizzeria.Models.Prodotto

@{
    ViewBag.Title = "Details";
}

<h2 class=" display-4">Dettagli Prodotto</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Foto)
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.Foto)" alt="Alternate Text" style="width: 20vw;"  class="rounded-2"/>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Prezzo) 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prezzo) €
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TempoConsegna)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TempoConsegna) min
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ingredienti)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ingredienti)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pranzo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pranzo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cena)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cena)
        </dd>

    </dl>
</div>
<div class="d-flex justify-content-between">
    @Html.ActionLink("Edit", "Edit", new { id = Model.idProdotto }, new { @class = "btn btn-warning" }) 
    @Html.ActionLink("Indietro", "Index", "Prodotto", new { area = "" }, new { @class = "btn btn-dark" })
</div>
